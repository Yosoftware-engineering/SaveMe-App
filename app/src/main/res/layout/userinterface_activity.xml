<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wp"
    android:orientation="vertical"
    tools:context=".Userinterface">


    <TextView
        android:id="@+id/textView"
        android:layout_width="392dp"
        android:layout_height="0dp"
        android:layout_marginBottom="448dp"
        android:lineSpacingExtra="36sp"
        android:text="Choose Emergencey Type"
        android:textAlignment="center"
        android:textSize="24sp"
        android:typeface="serif"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toStartOf="@+id/policebtn"
        app:layout_constraintStart_toStartOf="@+id/policebtn"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/heartrate"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="37dp"
        android:background="@drawable/heartrate"
        android:scaleType="fitCenter"
        android:text="Map"
        android:textSize="0dp"
        app:layout_constraintBottom_toTopOf="@+id/updateclosepeople"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mapbtn"
        app:layout_constraintTop_toBottomOf="@+id/closepplbtn" />

    <Button
        android:id="@+id/firefightbtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/firefight"
        android:scaleType="fitCenter"
        android:text="FireFight"
        android:textSize="0dp"
        app:layout_constraintBottom_toTopOf="@+id/mapbtn"
        app:layout_constraintEnd_toStartOf="@+id/closepplbtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ambulancebtn" />

    <Button
        android:id="@+id/mapbtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/map"
        android:scaleType="fitCenter"
        android:text="Map"
        android:textSize="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/heartrate"
        app:layout_constraintEnd_toStartOf="@+id/heartrate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/heartrate" />

    <Button
        android:id="@+id/ambulancebtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/ambulance"
        android:scaleType="fitCenter"
        android:text="Ambulance"
        android:textSize="0dp"
        app:layout_constraintBottom_toTopOf="@+id/closepplbtn"
        app:layout_constraintEnd_toStartOf="@+id/policebtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/policebtn" />

    <Button
        android:id="@+id/closepplbtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/ppl"
        android:scaleType="fitCenter"
        android:text="ClosePeople"
        android:textSize="0dp"
        app:layout_constraintBottom_toTopOf="@+id/heartrate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/firefightbtn"
        app:layout_constraintTop_toBottomOf="@+id/policebtn" />

    <Button
        android:id="@+id/policebtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/police"
        android:text="Police"
        android:textSize="0dp"
        app:layout_constraintBottom_toTopOf="@+id/closepplbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ambulancebtn"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/updateclosepeople"
        android:layout_width="0dp"
        android:layout_height="118dp"
        android:layout_marginStart="22dp"
        android:layout_marginBottom="45dp"
        android:text="updateclosepeople"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heartrate" />


</androidx.constraintlayout.widget.ConstraintLayout>
